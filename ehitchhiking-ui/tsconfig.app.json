{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"baseUrl": "src",
		"outDir": "./out-tsc/app",
		"types": [],
		"paths": {
			"@shared/*": ["app/shared/*"],
			"@pages/*": ["app/pages/*"],
			"*": ["types/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/test.ts", "src/**/*.spec.ts"]
}
