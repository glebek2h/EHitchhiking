{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./out-tsc/spec",
		"baseUrl": "src",
		"types": ["jasmine", "node"],
		"paths": {
			"@shared/*": ["app/shared/*"],
			"@pages/*": ["app/pages/*"]
		}
	},
	"files": ["src/test.ts", "src/polyfills.ts"],
	"include": ["src/**/*.spec.ts", "src/**/*.d.ts"]
}
